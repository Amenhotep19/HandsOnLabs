@{
    ViewData["Title"] = "Home Page";
}

    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-6">
            <h3>Connection Information</h3>
            <p>Connection Id: <span id="cnxnId"></span></p>

            <h2>Chat</h2>
            User:&nbsp;&nbsp;<input type="text" id="userInput" />
            <br />
            Message:&nbsp;&nbsp;<input type="text" size="60" id="messageInput" />
            <input type="button" id="sendButton" value="Send Message" />
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-6">&nbsp;</div>
        <div class="col-6">
            <ul id="messagesList"></ul>
        </div>
    </div>
    <div class="row">
        <div class="col-6">&nbsp;</div>
        <div class="col-6">
            <ul id="statusList"></ul>
        </div>
    </div>    

</div>
<script src="~/js/utils.js"></script>
<script src="~/lib/signalr/signalr.js"></script>
<script src="~/js/chat.js"></script>
